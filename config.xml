<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dreamworks.tom" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TowerOfMitos</name>
    <description>Tower Defense Game with Indonesian Mythology</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    
    <!-- Global preferences -->
    <preference name="orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    
    <!-- Android specific preferences -->
    <platform name="android">
        <preference name="android-targetSdkVersion" value="35" />
        <preference name="android-compileSdkVersion" value="35" />
        <preference name="Fullscreen" value="true" />
        <preference name="Immersive" value="true" />
        <preference name="KeepRunning" value="true" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="android-windowSoftInputMode" value="adjustResize" />
        
        <!-- Hide system UI -->
        <preference name="AndroidLaunchMode" value="singleTop" />
        <preference name="SplashScreenDelay" value="0" />
        

        
    </platform>
    

    
    <!-- Plugins -->
    <plugin name="cordova-plugin-statusbar" spec="^4.0.0" />
    <plugin name="cordova-plugin-screen-orientation" spec="^3.0.4" />
    <plugin name="cordova-plugin-fullscreen" spec="^1.3.0" />
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
</widget>
